{
    "file_name": "module_config",
    "file_version": "1.0",
    "name": "HTML Documentation",
    "version": "${../../version}",
    "author": "${../../author}",
    "company": "${../../company}",
    "date": "27.02.2021",
    "description": "Subproject to generate HTML documentation from all used source files",
    "copyright_info": "${../../copyright_info}",
    "web_url": "${../../web_url}",
    "email": "${../../email}",
    "sources":
    [
        "./*/*.cpp",
        "./*/*.hpp",
        "./*/*.f90"
    ],
    "targets":
    [
        {
            "name": "doc",
            "build_type": "documentation",
            "build_subtype": "HTML",
            "build_tool_type": "Doxygen & Sphinx",
            "result": "file",
            "result_name": "index.html",
            "build_directory": "${PROJECT_ROOT}/doc/",
            "dependencies": "${../../sources}"
        },
        {
            "name": "install",
            "build_type": "install",
            "build_subtype": "dir",
            "build_tool_type": "internal",
            "dependencies": "./doc/html",
            "install_source": "./doc/html"
        }

    ]
}
